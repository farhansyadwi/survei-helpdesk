{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/submit$", "dest": "api/submit.js" },
    { "src": "^/$", "dest": "public/index.html" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "public/$1" }
  ]
}
